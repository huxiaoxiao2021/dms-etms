            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="org.apache.ibatis" level="INFO" additivity="true">
        </Logger>

        <Logger name="java.sql" level="INFO" additivity="true">
        </Logger>

        <Logger name="com.jd.dbs.transaction" level="INFO">
        </Logger>

        <Logger name="com.jd.etms.basic.cache" level="INFO">
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.worker.PopAbnormalTask" level="INFO">
            <AppenderRef ref="bluedragon.popAbnormal"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.base" level="INFO">
            <AppenderRef ref="bluedragon.base"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.box" level="INFO">
            <AppenderRef ref="bluedragon.box"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.reverse.service" level="INFO">
            <AppenderRef ref="bluedragon"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.send.service" level="INFO">
            <AppenderRef ref="bluedragon"/>
        </Logger>

        <Logger name="com.jd.etms.message" level="INFO">
            <AppenderRef ref="bluedragon.etms.mq.sender"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.waybill.service" level="INFO">
            <AppenderRef ref="bluedragon.base"/>
        </Logger>

        <Logger name="com.jd.bluedragon" level="INFO">
            <AppenderRef ref="bluedragon.error"/>
            <AppenderRef ref="console"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution" level="INFO">
            <AppenderRef ref="bluedragon"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.send.dao.SendDetailRouterDao" level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="bluedragon"/>
        </Logger>

        <Logger name="com.jd.bluedragon.distribution.weight.service" level="INFO">
            <AppenderRef ref="bluedragon"/>
            <AppenderRef ref="console"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="bluedragon"/>
        </Root>
    </Loggers>
</Configuration>