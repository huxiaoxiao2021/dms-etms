<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <properties>
        <!-- 日志路径 -->
        <property name="LOG_HOME">d:/logs/worker</property>
    </properties>
    <Appenders>
        <!-- 输出控制台的配置 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n"/>
        </Console>

        <RollingFile name="bluedragon" fileName="${LOG_HOME}/bluedragon-distribution-worker.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-worker.log.%d{yyyyMMdd}">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>

        <RollingFile name="bluedragon.error" fileName="${LOG_HOME}/bluedragon-distribution-worker-error.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-worker-error.log.%d{yyyyMMdd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>

        <RollingFile name="bluedragon.sorting" fileName="${LOG_HOME}/bluedragon-distribution-worker-sorting.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-worker-sorting.log.%d{yyyyMMdd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>

        <RollingFile name="bluedragon.inspection"
                     fileName="${LOG_HOME}/bluedragon-distribution-worker-inspection.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-worker-inspection.log.%d{yyyyMMdd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>

        <RollingFile name="bluedragon.popAbnormal"
                     fileName="${LOG_HOME}/bluedragon-distribution-worker-popAbnormal.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-worker-popAbnormal.log.%d{yyyyMMdd}">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>

        <RollingFile name="bluedragon.base"
