<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/aop 
        http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<context:property-placeholder location="classpath:configured/*.properties" ignore-unresolvable="false"/>
	<bean id="timingAspect" class="org.perf4j.log4j.aop.TimingAspect"/>

	<bean id="dbArchiveService" class="com.jd.bluedragon.dbArchive.service.DBArchiveServiceImpl">
		<property name="dbArcConfigs">
			<set>
				<bean class="com.jd.bluedragon.dbArchive.domain.DBArchiveConfig">
					<property name="tableName" value="SYSTEM_LOG" />
					<property name="datasource" ref="dms_main" />
				</bean>
			</set>
		</property>
	</bean>
	<bean id="dbArchiveTask" class="com.jd.bluedragon.dbArchive.task.DBArchiveTask"
		init-method="init" lazy-init="false" depends-on="managerFactory"><!-- 请使用实际worker数据源工厂 -->
		<property name="dataSource" ref="taskDataSource" /><!-- 请使用实际worker数据源 -->
		<property name="taskType" value="DBArchiveTask" />
		<property name="managerFactory" ref="managerFactory" /><!-- 请使用实际worker数据源工厂 -->
		<property name="ownSign" value="DMSWEB" /><!-- 此项配置没有用 -->
		<property name="dbArchiveService" ref="dbArchiveService"/>
		<property name="onUse" value="true" /><!-- 是否生效用，默认生效-->
	</bean>

</beans> 
