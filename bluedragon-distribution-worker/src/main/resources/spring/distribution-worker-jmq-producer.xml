<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jmq="http://code.jd.com/schema/jmq"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://code.jd.com/schema/jmq
        http://code.jd.com/schema/jmq/jmq-1.0.xsd">

    <jmq:transport id="jmq.worker.transport" address="${jmq.worker.address}" user="${jmq.worker.user}"
                   password="${jmq.worker.password}" app="${jmq.worker.producer.app}"/>

    <jmq:producer id="workerProducer" retryTimes="3" transport="jmq.worker.transport"/>

</beans> 
