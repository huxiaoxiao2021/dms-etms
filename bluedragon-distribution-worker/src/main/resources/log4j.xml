	<appender name="bluedragon.etms.mq.sender" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${log.path.prefix}/bluedragon-distribution-worker-mq-sender.log" />
		<param name="Threshold" value="INFO"/>
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="20MB" />
		<param name="MaxBackupIndex" value="100"/>
		<param name="Encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c %M:%L - %m%n" />
		</layout>
	</appender>
	
	<appender name="CoalescingStatistics"
              class="org.perf4j.log4j.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="300000"/>
        <appender-ref ref="fileAppender"/>
    </appender>
	
	<appender name="fileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="${log.path.prefix}/perfStats.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n" />
        </layout>
    </appender>
	
	<!-- mybatis debug -->
	<category name="org.apache.ibatis"
		additivity="true">
		<priority value="DEBUG" />
		<appender-ref ref="console" />
	</category>
	
	<category name="java.sql" additivity="true">
		<priority value="DEBUG" />
		<appender-ref ref="console" />
	</category>
	
	<category name="org.perf4j.TimingLogger">
		<priority value="INFO" />
	</category>
	
	<logger name="com.jd.dbs.transaction" >
		<level value="ERROR" />
	</logger>

	<logger name="com.jd.etms.basic.cache" >
		<level value="ERROR" />
	</logger>

	<logger name="com.jd.bluedragon.distribution">
		<level value="INFO"/>
		<appender-ref ref="console"/>
		<appender-ref ref="bluedragon"/>
	</logger>
	
	<logger name="com.jd.bluedragon.distribution.sorting">
