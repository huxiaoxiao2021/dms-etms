	</logger>
 
	<logger name="com.jd.bluedragon.distribution.sendprint">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.send"/>
		<appender-ref ref="console"/>
	</logger>
	
	<logger name="com.jd.bluedragon.distribution.sorting.service.SortingReturnServiceImple">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.sortingReturn"/>
		<appender-ref ref="console"/>
	</logger>
		
	<logger name="com.jd.bluedragon.distribution.receive">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.receive"/>
		<appender-ref ref="console"/>
	</logger>
	
	<logger name="com.jd.bluedragon.distribution.receiveInspectionExc">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.receive"/>
		<appender-ref ref="console"/>
	</logger>
	
	<logger name="com.jd.bluedragon.distribution.partnerWaybill">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.partnerWaybill"/>
		<appender-ref ref="console"/>
	</logger>
	
	<logger name="com.jd.bluedragon.distribution.reverse.service">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.reverseservice"/>
	</logger>
	
	<logger name="com.jd.etms.message">
		<level value="INFO"/>
		<appender-ref ref="bluedragon.etms.mq.sender"/>
	</logger>
	
	<logger name="com.jd.bluedragon">
		<level value="ERROR"/>
		<appender-ref ref="bluedragon.error"/>
		<appender-ref ref="console"/>
	</logger>

	<appender name="dbArchive" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="${log.path.prefix}/dbArchive.log" />
		<param name="DatePattern" value="'.'yyyyMMdd" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c %M:%L - %m%n" />
		</layout>
	</appender>

	<logger name="com.jd.bluedragon.dbArchive" additivity="true">
		<level value="DEBUG" />
		<appender-ref ref="dbArchive" />
	</logger>
	
	<root>
		<level value="INFO"/>
		<appender-ref ref="console" />
		<appender-ref ref="bluedragon" />
		<appender-ref ref="CoalescingStatistics" />
	</root>

</log4j:configuration>
