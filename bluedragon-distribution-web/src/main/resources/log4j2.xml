<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>
        <!-- 日志路径 -->
        <property name="LOG_HOME">d:/logs/dms.web</property>
    </properties>
    <Appenders>
        <!-- 输出控制台的配置 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n"/>
        </Console>
        <!-- info -->
        <RollingFile name="bluedragon" fileName="${LOG_HOME}/bluedragon-distribution-web.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-web.%i.log">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
        <!-- warn -->
        <RollingFile name="bluedragon.warn" fileName="${LOG_HOME}/bluedragon-distribution-web-warn.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-web-warn.%i.log">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
        <!-- error -->
        <RollingFile name="bluedragon.error" fileName="${LOG_HOME}/bluedragon-distribution-web-error.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-web-error.%i.log">
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <RollingFile name="bluedragon.consumer" fileName="${LOG_HOME}/bluedragon-distribution-web-consumer.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-web-consumer.%i.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

        <RollingFile name="bluedragon.etms.mq.sender"
                     fileName="${LOG_HOME}/bluedragon-distribution-web-mq-sender.log"
                     filePattern="${LOG_HOME}/bluedragon-distribution-web-mq-sender.%i.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %c %M:%L - %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <!-- sql  -->
        <logger name="java.sql" level="INFO" additivity="true"/>
        <!-- mybatis  -->
        <logger name="org.mybatis" level="ERROR" additivity="true"/>
        <logger name="org.apache.ibatis" level="ERROR" additivity="true"/>
        <logger name="org.springframework" level="ERROR" additivity="true"/>
        <logger name="org.apache.commons" level="ERROR" additivity="true"/>

        <logger name="com.jd.jsf" level="INFO" additivity="true"/>
        <logger name="com.jd.jmq" level="INFO" additivity="true"/>
        <logger name="com.jd.common" level="ERROR" additivity="true"/>
        <logger name="com.jd.tbschedule" level="ERROR" additivity="true"/>
        <logger name="org.apache.cxf" level="ERROR" additivity="true"/>

        <Logger name="com.jd.dbs.transaction" level="ERROR" additivity="true">
        </Logger>

        <Logger name="com.jd.etms.basic.cache" level="ERROR" additivity="true">
        </Logger>

        <Logger name="com.jd.bluedragon" level="INFO" additivity="true">
            <AppenderRef ref="bluedragon.warn"/>
        </Logger>

        <Logger name="com.jd.etms.message" level="WARN"  additivity="true">
            <AppenderRef ref="bluedragon.etms.mq.sender"/>
        </Logger>

        <Logger name="com.jd.bluedragon.core.message" level="WARN"  additivity="true">
            <AppenderRef ref="bluedragon.consumer"/>
        </Logger>

        <!-- 建立一个默认的root的Logger -->
        <Root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="bluedragon"/>
            <AppenderRef ref="bluedragon.warn"/>
            <AppenderRef ref="bluedragon.error"/>
        </Root>
    </Loggers>

</Configuration>